@model ReqMVC.Models.ViewModel.RequestCreateModel

@{
    ViewBag.Title = "Добавление заявки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    //$(document).ready(function() {
    //    $("#SelectList").removeAttr("multiple");
    //});

</script>

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="well col-md-6">
        @Html.AntiForgeryToken()
        @using (Html.BeginForm("Create", "Request", FormMethod.Post))
        {
            <fieldset>
                <legend>Заполните необходимые поля</legend>

                <div class="form-group col-lg-12">
                    @Html.LabelFor(x => x.DevicesList, new {@class = "control-label"})
                    @*TODO: Сделать валидацию на невыбранное значение оборудования*@
                    @Html.DropDownListFor(x => x.DeviceId, new SelectList(Model.DevicesList, "Id", "ViewName"), new {@class = "form-control", id = "SelectList", size = 5})
                    <div>
                        @Html.ValidationMessageFor(model => model.DeviceId)
                    </div>
                </div>

                <div class="form-group col-lg-12">
                    @Html.LabelFor(x => x.Text, new {@class = "control-label"})
                    @Html.TextAreaFor(x => x.Text, new {@class = "form-control col-lg-12", id = "Text", rows = 5})
                    <div>
                        @Html.ValidationMessageFor(model => model.Text)
                    </div>

                </div>

                <div class="form-group col-lg-12">
                    @Html.LabelFor(x => x.Author, new {@class = "control-label"})
                    @Html.TextBoxFor(x => x.Author, new {@class = "form-control", id = "Author"})
                    <div>
                        @Html.ValidationMessageFor(model => model.Text)
                    </div>
                </div>
            </fieldset>
            <button type="submit" class="btn btn-primary">Создать заявку</button>
        }
    </div>
</div>
